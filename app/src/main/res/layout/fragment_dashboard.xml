<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment"
    android:layoutDirection="ltr">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/chores_MTV_choresText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prizes shop"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/text_dashboard"

        >

    </com.google.android.material.textview.MaterialTextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shop_RV_list"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_below="@+id/chores_MTV_choresText"
        android:layout_marginTop="20sp"

        >

    </androidx.recyclerview.widget.RecyclerView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/shop_MB_NewPrize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New prize"
        android:layout_below="@id/shop_RV_list"
        android:layout_centerHorizontal="true"
        >

    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shop_SIV_right"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_toRightOf="@id/shop_MB_NewPrize"
        android:layout_below="@id/shop_RV_list"
        android:layout_marginLeft="40dp"
        android:src="@drawable/baseline_arrow_right_24"
        android:visibility="invisible"
        >
    </com.google.android.material.imageview.ShapeableImageView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shop_SIV_left"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_toLeftOf="@id/shop_MB_NewPrize"
        android:layout_below="@id/shop_RV_list"
        android:layout_marginRight="40dp"
        android:src="@drawable/baseline_arrow_left_24"
        android:visibility="invisible"

        >
    </com.google.android.material.imageview.ShapeableImageView>







    <TextView
        android:id="@+id/text_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:textAlignment="center"
        android:textSize="0sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</RelativeLayout>